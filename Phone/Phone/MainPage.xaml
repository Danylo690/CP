<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phone.MainPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtIpClient" Placeholder="Enter server IP" Text="192.168.1.107"/>
            <Entry x:Name="txtPortClient" Placeholder="Entry server port" Text="13000" Keyboard="Numeric"/>
            <Button x:Name="startConnent"  Text="Connect" Clicked="StartConnect"/>
            <Button x:Name="startDisconnect"  Text="Disconnect" Clicked="StartDisconnect"/>
            <Button x:Name="pickFiles"  Text="Pick files" Clicked="PickAndShow"/>
            <Label x:Name="lblFilePath"/>
            <Label x:Name="lblFileName"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
